    <style>
        body {
            font-family: Georgia, serif;
            background-color: #f5f5dc;
            margin: 0;
            padding: 0;
        }

        .caderno {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Texto invisível inicialmente */
        .texto {
            opacity: 0;
            transform: translateY(20px); /* Move o texto para baixo */
            transition: opacity 0.6s ease-out, transform 0.6s ease-out; /* Animação suave */
        }

        /* Classe que será adicionada quando o texto estiver visível */
        .texto.visivel {
            opacity: 1;
            transform: translateY(0); /* Texto volta para a posição original */
        }

        h1 {
            text-align: center;
            font-size: 2.5em;
            font-weight: bold;
        }

        p {
            font-size: 1.2em;
            text-align: justify;
            margin-bottom: 10px;
        }

        /* Estilo para os botões */
        .botao {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            margin: 10px 0;
            border: none;
            cursor: pointer;
        }

        .botao-compartilhar {
            background-color: #008CBA;
        }

        .texto {
            margin-bottom: 20px;
        }
    </style>
